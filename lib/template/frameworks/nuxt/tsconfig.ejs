{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",<% if (axios) { %>
      "@nuxtjs/axios",<% } %>
      "@nuxtjs/vuetify",
      "@types/jest",
      "nuxt-i18n"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
